@using webEcom.ViewModels;
@model LoginViewModel;

@{
	ViewData["Title"] = "Login";
	Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
<style>
     div {
         font-family: 'Cloud soft';
     }
</style>

<div class="account-container">

    <form asp-controller="Account" asp-action="Login" method="post">


        <div class="logo-container">
            <img class="logo-item" src="~/images/logo1.png" />
        </div>

        <div class="account-box1">
            <div style="opacity:0; max-height:5vh; height:5vh;">
                <img class="logo-item" src="~/images/logo1.png" />
            </div>
            <div class="row">
                <div class="col-sm-12 mb3 w-100" style="z-index:999999;">
                    <input type="text" asp-for="UserEmail" class="form-control" placeholder="Email">
                    <span asp-validation-for="UserEmail" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12 mt-3 mb-3 w-100" style="z-index:999999;">
                    <input type="password" asp-for="UserPassword" class="form-control" placeholder="Password">
                    <span asp-validation-for="UserPassword" class="text-danger"></span>
                </div>
            </div>

            <div class="row justify-content-center">
                <label class="form-check-label">
                    <input asp-for="RememberMe" class="form-check-input" />
                    @Html.DisplayNameFor(a => a.RememberMe)
                </label>
            </div>

        </div>

        <div class="text-center" style="position:relative; margin-top:-2.5vh; z-index:9999">
                <button type="submit" class="btn btn-primary w-75 p-2">Login</button>
        </div>

        <div style="display:flex; position:relative; justify-content:center; align-items:center; align-self:center; margin-top:1.5vh;">
            <div>Don't have an account? <a asp-controller="Account" asp-action="Register">Register</a> or <a href="javascript:void(0);" onclick="goBack()">Back</a></div>
        </div>
        
    </form>

</div>

<script>
    function goBack() {
        window.location.href = '@Url.Action("index", "Home")';
    }
</script>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}