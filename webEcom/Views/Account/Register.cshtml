@using webEcom.ViewModels;
@model RegisterViewModel;

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
<div class="account-container">

    <form asp-controller="Account" asp-action="Register" method="post">

        <div class="logo-container">
            <img class="logo-item" src="~/images/logo1.png" />
        </div>

        <div class="account-box1">
            <div style="opacity:0; max-height:5vh; height:5vh;">
                <img class="logo-item" src="~/images/logo1.png" />
            </div>

            <div class="row justify-content-between mb-3" >
                <div class="col-sm">
                    <div class="mb3 w-100" style="z-index:999999;">
                        <input type="text" asp-for="UserFirstName" class="form-control" placeholder="Name">
                        <span asp-validation-for="UserFirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-7">
                    <div class="mb3 w-100" style="z-index:999999;">
                        <input type="text" asp-for="UserSurname" class="form-control" placeholder="Surname">
                        <span asp-validation-for="UserSurname" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 mb3 w-100" style="z-index:999999;">
                    <input type="text" asp-for="UserEmail" class="form-control" placeholder="Email">
                    <span asp-validation-for="UserEmail" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 mt-3 mb-3 w-100" style="z-index:999999;">
                    <input type="password" asp-for="UserPassword" class="form-control" placeholder="Password">
                    <span asp-validation-for="UserPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 mb-3 w-100" style="z-index:999999;">
                    <input type="password" asp-for="UserConfirmPassword" class="form-control" placeholder="Confirm Password">
                    <span asp-validation-for="UserConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 mb-3 w-100" style="z-index:999999;">
                    <input type="text" asp-for="UserAddress" class="form-control" placeholder="Address" style="height:7.5vh;">
                    <span asp-validation-for="UserAddress" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 mb-3 w-100" style="z-index:999999;">
                    <input type="tel" asp-for="UserPhoneNumber" class="form-control" placeholder="Phone Number">
                    <span asp-validation-for="UserPhoneNumber" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="text-center" style="position:relative; margin-top:-2.5vh; z-index:9999">
            <button type="submit" class="btn btn-primary w-75 p-2">Register</button>
        </div>

    </form>

</div>


