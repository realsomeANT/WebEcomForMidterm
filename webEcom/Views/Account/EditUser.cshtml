@using Microsoft.AspNetCore.Identity
@using webEcom.ViewModels;
@inject UserManager<Users> UserManager
@model webEcom.Models.Users;
@{
    ViewData["Title"] = "Edit Account";
    Layout = "~/Views/Shared/_AccountLayout_Edit.cshtml";
}

<style>
    div{
        font-family: 'Cloud soft';
    }
</style>

<div class="pad_me">
    <div class="account-container">
        <div>

            <div class="BR_V1">
                <div class="row">
                    <div class="col-md-12">
                        <div class="Label_Box">
                            <h2 style="z-index:1111;">Edit Account</h2>
                        </div>
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="MainEdit_Box">

                    <div class="BR_V2">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="Label_Box">
                                    <h2 style="z-index:1111;">Edit Account</h2>
                                </div>
                            </div>
                        </div>
                    </div>





                    <div class="col-md-12 justify-content-center">
                        <a asp-controller="Account" asp-action="EditUser_Profile" class="Info_Box">
                            <div class="row">
                                <div class="col-md-4 start-0"><strong>Proflie :</strong></div>
                                <div class="col-md-8"><img src="data:image/png;base64,@ViewBag.UserProfile" style="border-radius: 50%; width: 100%; height: 100%; object-fit: cover; max-height: 75px; max-width: 75px; min-height: 75px; min-width: 75px; box-shadow: 0 0 3px rgba(0,0,0,0.2);" alt="User  Profile Image" /></div>
                            </div>
                        </a>
                        <a asp-controller="Account" asp-action="EditUser_Name" class="Info_Box">
                            <div class="row">
                                <div class="col-md-4 start-0"><strong>Name :</strong></div>
                                <div class="col-md-8" style=" overflow-wrap:break-word; word-wrap:break-word; hyphens: auto;">@ViewBag.UserFirstName</div>
                            </div>
                        </a>

                        <a asp-controller="Account" asp-action="EditUser_Surname" class="Info_Box">
                            <div class="row">
                                <div class="col-md-4 start-0"><strong>Surname :</strong></div>
                                <div class="col-md-8" style=" overflow-wrap:break-word; word-wrap:break-word; hyphens: auto;">@ViewBag.UserSurname</div>
                            </div>
                        </a>

                        <a asp-controller="Account" asp-action="EditUser_Email" class="Info_Box">
                            <div class="row">
                                <div class="col-md-4 start-0"><strong>Email :</strong></div>
                                <div class="col-md-8" style=" overflow-wrap:break-word; word-wrap:break-word; hyphens: auto;">@ViewBag.Email</div>
                            </div>
                        </a>
                        <a asp-controller="Account" asp-action="EditUser_PhoneNumber" class="Info_Box">
                            <div class="row">
                                <div class="col-md-4 start-0"><strong>Phone Number :</strong></div>
                                <div class="col-md-8" style=" overflow-wrap:break-word; word-wrap:break-word; hyphens: auto;">@ViewBag.UserPhoneNumber</div>
                            </div>
                        </a>
                        <a asp-controller="Account" asp-action="EditUser_Address" class="Info_Box">
                            <div class="row">
                                <div class="col-md-4 start-0"><strong>Address :</strong></div>
                                <div class="col-md-8" style="overflow-wrap:break-word; word-wrap:break-word; hyphens: auto;">
                                    @ViewBag.UserAddress
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="BR_V2">
                        <div class="row">
                            <div class="text-center">
                                <div class="col-md-12">
                                    <div class="col-md-12 mb-3 w-100" style="z-index:999999; margin-top:1.25vh;">
                                        <a href="javascript:void(0);" onclick="goBack()">Back</a>
                                    </div>
                                </div>
                            </div>
                            <div style="height:50px;"></div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="BR_V1">
                <div class="row">
                    <div style="height:50px;"></div>
                    <div class="text-center">
                        <div class="col-md-12">
                            <div class="col-md-12 mb-3 w-100" style="z-index:999999; margin-top:1.25vh;">
                                <a href="javascript:void(0);" onclick="goBack()">Back</a>
                            </div>
                        </div>
                    </div>
                    <div style="height:50px;"></div>
                </div>
            </div>



        </div>

    </div>
</div>

<script>
    function goBack() {
        window.location.href = '@Url.Action("index", "Home")';
    }
</script>
